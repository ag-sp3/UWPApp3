<Page
    x:Class="UWPApp3.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UWPApp3"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <RelativePanel>
            <TextBox x:Name="tbx_SupplierFile" Header="Supplier File: " 
                     RelativePanel.AlignLeftWithPanel="True" HorizontalAlignment="Stretch" 
                     RelativePanel.LeftOf="btn_Parse"
                     VerticalAlignment="Bottom"
                     Margin="10,10,0,10"/>
            <Button x:Name="btn_Parse" RelativePanel.AlignRightWithPanel="True"
                    RelativePanel.AlignBottomWithPanel="True" Margin="10">Parse!</Button>
        </RelativePanel>

    </Grid>
</Page>
